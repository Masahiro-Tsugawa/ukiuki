<?xml version="1.0" encoding="UTF-8"?>
<!-- DTD(文書型定義) -->
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
 "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<!-- クレジット番号 -->
	<field name="creditNum">
		<field-validator type="requiredstring">
			<message>%{getText('ticketBuy.validCreditNumberRS')}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[([0-9a-z]{0,50})]]></param>
			<message>%{getText('ticketBuy.validCreditRG')}</message>
		</field-validator>
	</field>

	<!-- セキュリティコード -->
	<field name="secureCode">
		<field-validator type="requiredstring">
			<message>%{getText('ticketBuy.validCVRS')}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[([0-9]{3,4})]]></param>
			<message>%{getText('ticketBuy.validCVRG')}</message>
		</field-validator>
	</field>


</validators>