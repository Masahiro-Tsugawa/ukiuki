         <!-- Twitter認証のコールバックアクション -->
		<action name="LoginTwitterAction" class="com.internousdev.ukiukiutopia.action.LoginTwitterAction"
			method="execute">
			<result name="success">home.jsp</result>
			<result name="error">home.jsp</result>
                </action>

		<!-- ここまでTwitter認証関係 -->
